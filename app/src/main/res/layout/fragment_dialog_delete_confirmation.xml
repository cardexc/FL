<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_confirmationdialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Context"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/fragment_confirmationdialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Context"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/fragment_confirmationdialog_button_ok"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/label_OK"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            style="@style/contact_raised_buttons"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/fragment_confirmationdialog_button_cancel"
            android:layout_width="95dp"
            android:layout_height="36dp"
            android:text="@string/label_cancel"
            android:layout_toStartOf="@id/fragment_confirmationdialog_button_ok"
            android:layout_toLeftOf="@id/fragment_confirmationdialog_button_ok"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            style="@style/contact_raised_buttons" />



    </RelativeLayout>

</LinearLayout>